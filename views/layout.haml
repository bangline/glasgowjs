%html
  %head
    %title Glasgow JavaScript User Group

    %link{ rel:  "stylesheet/less",
           type: "text/css",
           href: "/stylesheets/styles.less" }

    %script{  type: "text/javascript",
              src:  "http://cdnjs.cloudflare.com/ajax/libs/less.js/1.3.0/less-1.3.0.min.js" }

